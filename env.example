# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string for Azure Database for PostgreSQL
DATABASE_URL="postgresql://username:password@your-server.postgres.database.azure.com:5432/real_estate_db?sslmode=require"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the application (Azure App Service will set this automatically)
PORT=8080
# Environment: development, staging, production
NODE_ENV=production
# Log level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGIN=https://your-frontend-app.azurewebsites.net,http://localhost:3000

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limiting window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# AZURE BLOB STORAGE CONFIGURATION
# =============================================================================
# Azure Storage Account name
AZURE_STORAGE_ACCOUNT=your_azure_storage_account_name
# Azure Storage Account access key
AZURE_STORAGE_ACCESS_KEY=your_azure_storage_access_key
# Blob container name for property images
AZURE_BLOB_CONTAINER=property-images
# SAS token expiration time in hours
AZURE_SAS_EXPIRY_HOURS=1

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (if implementing authentication later)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Session secret (if implementing sessions later)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Application Insights connection string (optional)
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string 