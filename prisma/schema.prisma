generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id               Int      @id @default(autoincrement())
  propertyName     String
  rent             Float
  securityDeposit  Float
  maintenance      Float
  location         String
  availableFrom    DateTime
  propertyType     PropertyType
  bhkType          BhkType
  furnishing       Furnishing
  preferredTenant  PreferredTenant
  ownerType        OwnerType
  ownerName        String
  contactNumber    String
  imageUrls        String[] @db.Text // Azure Blob Storage URLs
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("properties")
}

enum PropertyType {
  Individual
  Apartment
  Villa
}

enum BhkType {
  OneRK
  OneBHK
  TwoBHK
  ThreeBHK
  FourBHK
}

enum Furnishing {
  Unfurnished
  SemiFurnished
  FullFurnished
}

enum PreferredTenant {
  Any
  Family
  Bachelor
}

enum OwnerType {
  Landlord
  Other
}
